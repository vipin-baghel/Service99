<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.service99.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/navigation_profile" />

    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.service99.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_booking"
        android:name="com.service99.ui.booking_history.BookingFragment"
        android:label="Bookings"
        tools:layout="@layout/fragment_booking" />

    <fragment
        android:id="@+id/navigation_contact_us"
        android:name="com.service99.ui.contact_us.ContactFragment"
        android:label="Contact Us"
        tools:layout="@layout/fragment_contact" />

</navigation>
